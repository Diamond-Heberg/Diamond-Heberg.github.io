---
const { title } = Astro.props;

import Layout from "./Layout.astro";
---

<Layout title={title}>

  <div class="drawer">
    <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col">
      <!-- Navbar -->
      <nav class="navbar fixed top-0 z-20 bg-base-200">
        <div class="navbar-start">
          <div class="flex-none lg:hidden">
            <label
              for="my-drawer-3"
              aria-label="open sidebar"
              class="btn btn-square btn-ghost">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="inline-block w-6 h-6 stroke-current">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </label>
          </div>

          <button
            class="btn p-1 ml-2 text-2xl font-extrabold"
            data-toggle-theme="diamondblack,diamondwhite"
            data-act-class="diamondblack">
            <svg
              class="w-10"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 175 136">
              <path
                d="M2 42h170M7 49l73 79c4 4 10 4 14 0l73-79c4-4 4-9 1-13L147 8c-1-2-4-4-8-4H35c-3 0-6 2-8 4L7 36c-3 4-3 9 0 13Zm78 81L51 42"
                stroke="currentColor"
                stroke-width="8"></path>
              <path
                d="M138 23H56m-16 0h-1"
                stroke="currentColor"
                stroke-width="10"
                stroke-linecap="round"></path>
              <path d="m89 132 34-90" stroke="currentColor" stroke-width="8"
              ></path>
            </svg>
            Diamond Heberg
          </button>
        </div>
        <div class="navbar-end hidden lg:flex">
          <ul class="menu menu-horizontal px-1 mr-2">
            <li><a class="text-info hover:text-primary">🏠 Accueil</a></li>

            <li class="dropdown dropdown-hover">
              <label tabindex="0"><a href="game">🛒 Nos Offres Jeux</a></label>
              <ul
                tabindex="0"
                class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                <li><a href="game/minecraft">Minecraft</a></li>
                <li><a href="game/fivem">FiveM</a></li>
                <li><a href="game/garrysmod">Garry's Mod</a></li>
              </ul>
            </li>

            <li class="dropdown dropdown-hover">
              <label tabindex="0"><a href="cloud">🌐 Nos Offres Cloud</a></label
              >
              <ul
                tabindex="0"
                class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                <li><a href="cloud/web">Hébergement Web</a></li>
                <li><a href="cloud/vps">VPS</a></li>
                <li><a href="cloud/reseller">Revendeur Web</a></li>
              </ul>
            </li>

            <li class="dropdown dropdown-hover">
              <label tabindex="0">🚨 Support</label>
              <ul
                tabindex="0"
                class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                <li>
                  <a href="https://manager.diamond-heberg.fr/client/support"
                    >🎫 Ouvrir un Ticket</a
                  >
                </li>
                <li>
                  <a href="https://discord.com/invite/9HqYmuN4Fy"
                    >📞 Support Discord</a
                  >
                </li>
                <li>
                  <a href="mailto:contact@diamond-heber.fr">📧 Contactez-Nous</a
                  >
                </li>
              </ul>
            </li>
          </ul>

          <a
            href="https://manager.diamond-heberg.fr"
            target="_blank"
            class="transition-colors hover:scale-105 ease-in-out duration-300 mx-4 btn text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-gradient-to-br"
            >Espace Client</a
          >
        </div>
      </nav>
    </div>
    
    <slot />

    <div class="drawer-side">
      <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"
      ></label>
      <ul class="menu p-4 w-80 min-h-full bg-base-200 dropdown-content">
        <!-- Sidebar content here -->
        <li><a class="text-info hover:text-primary mt-14">🏠 Acceuil</a></li>

        <li>
          <a href="game">🛒 Nos Offres Jeux</a>
          <ul class="p-2">
            <li><a href="game/minecraft">Minecraft</a></li>
            <li><a href="game/fivem">FiveM</a></li>
            <li><a href="game/garrysmod">Garry's Mod</a></li>
          </ul>
        </li>

        <li>
          <a href="cloud">🌐 Nos Offres Cloud</a>
          <ul class="p-2">
            <li><a href="cloud/web">Hébergement Web</a></li>
            <li><a href="cloud/vps">VPS</a></li>
            <li><a href="cloud/reseller">Revendeur Web</a></li>
          </ul>
        </li>

        <li>
          <a>🚨 Support</a>
          <ul class="p-2">
            <li>
              <a href="https://manager.diamond-heberg.fr/client/support"
                >🎫 Ouvrir un Ticket</a
              >
            </li>
            <li>
              <a href="https://discord.com/invite/9HqYmuN4Fy" target="_blank"
                >📞 Support Discord</a
              >
            </li>
            <li>
              <a href="mailto:contact@diamond-heberg.fr">📧 Contactez-Nous</a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</Layout>
